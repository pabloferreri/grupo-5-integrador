<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head')%> 
<body>
  <%- include('./partials/header')%> 
  <main>
    <!--aca va el carrusel--> 
    <div>
      <img class="imagen-carrusel" src="/images/AORUS-logo.jpg">
    </div>
    <h1>Ofertas</h1>
    <div class="row g-2">

        <% products.forEach(product => { %>
         
                
      <div class="col-md-3">
          <div class="product-card">
              <div class="img-container">
                  <div class="d-flex justify-content-between align-items-center p-2 first"> <a href=""><img src="/images/products/<%= product.image%>" class="img-fluid"></a></div> 
              </div>
              <div class="product-detail-container">
                  <div class="d-flex justify-content-between align-items-center">
                      <h6 class="mb-0"><%= product.name%></h6> <span class="text-danger font-weight-bold">$<%= product.price%></span>
                  </div>
                  <article class="product-description mt-3"><%= product.description%> </article>
                  <div class="mt-3 "> <a href="#"><button class="btn btn-secondary btn-block">Ver detalle</button></a> </div>

              </div>
          </div>
      </div>
   
      <% }) %>
    </div>
      <h1>Ultimos productos vistos</h1>
     
         
     <div class="row g-2">
     <% products.forEach(product => { %>          
        <div class="col-md-3">
            <div class="product-card">
                <div class="img-container">
                    <div class="d-flex justify-content-between align-items-center p-2 first"> </div> <img src="/images/products/<%= product.image%>" class="img-fluid">
                </div>
                <div class="product-detail-container">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="mb-0"><%= product.name%> </h6> <span class="text-danger font-weight-bold">$<%= product.price%> </span>
                    </div>
                    <article class="product-description mt-3"><%= product.description%> </article>
                    <div class="mt-3 "> <a href="/detalle/<%= product.id%>"><button class="btn btn-secondary btn-block">Ver detalle</button></a> </div>
                </div>
            </div>
        </div>
        
    <% }) %>
 
    </div> 
  </main>

  <%- include('./partials/footer')%> 
</body>
</html>
