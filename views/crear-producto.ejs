<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head')%>
<body>
    <%- include('./partials/header')%>

    <main>
        <div class="container">

            <div class="card bg-light">
                <article class="card-body mx-auto" style="max-width: 400px;">
                    <h4 class="card-title mt-3 text-center">Agregar Producto</h4>
                    <form>
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-user "></i></span>
                            </div>
                            <input name="" class="form-control" placeholder="Titulo" type="text">
                        </div> 
        <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-envelope"></i></span>
                            </div>
                            <input name="" class="form-control" placeholder="Precio" type="text" >
                        </input>
                        </div> 
        <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-phone"></i> </span>
                            </div>
                            <input name="" class="form-control" placeholder="Telefono" type="text">
                        </div> 
        <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="form-control" placeholder="Estado" type="text">
                        </div> 
        <!-- form-group// -->
                        <div class="form-group input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input class="form-control" placeholder="Subir una imagen" type="file" accept=".jpg">
                        </div> 
        <!-- form-group// -->                                      
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Agregar producto  </button>
                        </div> 
        <!-- form-group// -->                                                                 
                    </form>
                </article>
            </div>
        </div> 
        
    </main>

    <%- include('./partials/footer')%> 
</body>
</html>